{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"noEmit": false,
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"],
		  "@domain/*": ["domain/*"],
		  "@infra/*": ["infraestructure/*"],
		  "@ecs/*": ["infraestructure/ecs/*"],
		  "@game/*": ["infraestructure/phaser/game/*"],
		  "@scenes/*": ["scenes/*"]
		},
        "outDir": "./dist",
		"types": [
			"phaser"
		]
	},
	"include": [
		"src/**/*",
		"types/**/*"
	]
}
